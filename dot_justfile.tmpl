@default:
    just --list

nix-install *ARGS:
    /bin/bash -c "<(curl -L https://nixos.org/nix/install/) {{ ARGS }}"

home-manager-init:
    nix run --experimental-features 'nixcommand flakes' 'nixpkgs#home-manager' -- switch

chezmoi-init:
    nix run --experimental-features 'nixcommand flakes' 'nixpkgs#chezmoi' -- switch
