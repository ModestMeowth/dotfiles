[apply]
    whitespace = fix

[core]
    whitespace = space-before-tab,-ident-with-non-tab,trailing-space
    editor = vim

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[user]
    name = "Daniel Eberle"
    email = "dan.eberle@protonmail.com"

[diffs]
    renames = copies

[init]
	defaultBranch = main

[credential "https://github.com"]
	helper = 
	helper = !{{ .chezmoi.homeDir }}/.nix-profile/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !{{ .chezmoi.homeDir }}/.nix-profile/bin/gh auth git-credential
