{{ if (eq .chezmoi.os "linux") -}}
#!/usr/bin/env bash

set -eufo pipefail

if [ $(command -v aqua) ]; then
    printf "Upgrading Aqua\n"
    aqua update-aqua
else
    printf "Installing Aqua\n"
    curl -sSfL https://raw.githubusercontent.com/aquaproj/aqua-installer/v2.1.3/aqua-installer | bash -- -v v2.8.0
fi

# .config/aqua.yaml hash: {{ include "dot_config/aqua.yaml.tmpl" | sha256sum }}
aqua install -a

{{ end -}}
