{{ if (eq .chezmoi.os "linux") -}}
#!/usr/bin/env bash

set -eufo pipefail

#renovate: depName=aquaproj/aqua datasource=github-releases
current_aqua_version=v2.3.5

if [ ! $(command -v aqua) ] || [ $(aqua -v | head -n1 | cut -d" " -f3 | sed "s/^/v/") != $current_aqua_version ]; then
    printf "Installing / Upgrading Aqua\n"
    curl -sSfL https://raw.githubusercontent.com/aquaproj/aqua-installer/main/aqua-installer | bash -s -- -v $current_aqua_version
fi

# .config/aqua.yaml hash: {{ include "dot_config/aqua.yaml.tmpl" | sha256sum }}
aqua install -a

{{ end -}}
